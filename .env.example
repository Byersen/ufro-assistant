# Configuraci贸n del UFRO Assistant
# Copia este archivo como .env y completa con tus API keys

# OpenRouter (para ChatGPT)
OPENROUTER_API_KEY=api_key_here
OPENROUTER_MODEL=openai/gpt-4.1-mini

# DeepSeek API
DEEPSEEK_API_KEY=api_key_here
DEEPSEEK_MODEL=deepseek-chat

# Configuraci贸n de embeddings (modelo local)
EMBED_MODEL=all-MiniLM-L6-v2

# Configuraci贸n general
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
REQUEST_TIMEOUT=60

# Configuraci贸n RAG
RAG_TOP_K=4
CHUNK_SIZE=900
CHUNK_OVERLAP=120

# Qdrant (opcional: usar en lugar de FAISS local)
# Para Qdrant Cloud usa QDRANT_URL y QDRANT_API_KEY; para local usa host/port
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=ufro_chunks


